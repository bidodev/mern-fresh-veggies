{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/account/(.*)", "dest": "/api/index.js" },
    { "src": "/farmers/(.*)", "dest": "/api/index.js" },
    { "src": "/users/(.*)", "dest": "/api/index.js" },
    { "src": "/uploads/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
