{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,
  "buildCommand": "npm run client-install && npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/account/:path*", "destination": "/api/index" },
    { "source": "/farmers/:path*", "destination": "/api/index" },
    { "source": "/users/:path*", "destination": "/api/index" },
    { "source": "/uploads/:path*", "destination": "/api/index" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
